{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          "jsx"
        ]
      }
    ],
    "prettier/prettier": "error",
    "max-len": [
      "error",
      80
    ],
    "no-console": 1,
    "no-debugger": 1,
    "no-dupe-keys": 2,
    "import/no-named-as-default": 0,
    "import/prefer-default-export": 0,
    "import/no-named-as-default-member": 0,
    "global-require": 0,
    "react/prop-types": 1,
    "no-shadow": 1,
    "react/destructuring-assignment": 1,
    "no-unused-vars": 1
  }
}
